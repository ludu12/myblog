
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-push-8">
			<h2 class="text-muted">Categories</h2>
			<ul class="nav nav-pills nav-stacked">

				<li {{#unless filters.category}}class="active"{{/unless}}>
					<a href="/blog">All Categories</a>
				</li>
				{{# each data.categories }}
				<li {{#ifeq ../filters.category key}}class="active"{{/ifeq}}>
					<a href="{{categoryUrl key}}">{{name}}</a>
				</li>
				{{/each}}
			</ul>
		</div>
		<div class="col-md-8 col-md-pull-4">
			{{!-- Do you want to show the number of posts? --}}
			<h4 class="text-muted">Showing {{ data.posts.results.length}} post.</h4>
			<div>
				{{# each data.posts.results}}
				<article data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="media">
					
					{{!-- Do you want to show who this post is by? --}}
					{{!-- <p class="text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p> --}}

					{{!-- {{#if image}}<img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}" class="img pull-right">{{/if}} --}}		
					<div class="media-left">
						{{#if image}}<a href="{{postUrl slug}}"><img src="{{{cloudinaryUrl image width=100 height=100 crop='fit' }}}" class="media-object"></a>{{/if}}
					</div>
					<div class="media-body">
						<h3 class="media-heading"><a href="{{postUrl slug}}">{{{title}}}</a></h3> 
						<h5 class="text-muted">{{#if publishedDate}}{{dateFormat publishedDate "date"}}{{/if}}<h5>
						{{#if content.extended}}<h5>{{{content.brief}}}</h5>{{/if}}
					</div>
				</article>
				{{/each}}
			</div>
		</div>
	</div>
	{{>pagination}}
</div>
